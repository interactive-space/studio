{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "module": "ESNext",
    "target": "ES5",
    "baseUrl": "src",
    "rootDir": "src",
    "paths": {
      "@/*": ["./*"]
    },
    "isolatedModules": true,
    "declaration": true,
    "sourceMap": true
  },
  "exclude": ["stories", "modern.config.ts", "rollup.config.js", "dist", "dist-*"]
}
