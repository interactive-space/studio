{
  "name": "@interactive/code-editor",
  "version": "0.1.0",
  "jsnext:source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "scripts": {
    "prepare": "cd ../.. && husky install",
    "start": "rimraf ./dist/ && rollup -c --watch --bundleConfigAsCjs",
    "start:storybook": "modern dev",
    "build": "rimraf ./dist/ && rollup -c --bundleConfigAsCjs",
    "reset": "rimraf ./**/node_modules",
    "lint": "modern lint",
    "change": "modern change",
    "bump": "modern bump",
    "pre": "modern pre",
    "change-status": "modern change-status",
    "gen-release-note": "modern gen-release-note",
    "release": "modern release",
    "new": "modern new",
    "upgrade": "modern upgrade"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --quiet"
    ],
    "*.{js,jsx,mjs,mjsx,cjs,cjsx}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --quiet"
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/"
  ],
  "devDependencies": {
    "@modern-js/module-tools": "2.19.1",
    "@modern-js/eslint-config": "2.19.1",
    "@modern-js/tsconfig": "2.19.1",
    "@modern-js-app/eslint-config": "2.19.1",
    "@modern-js/plugin-storybook": "~2.19.1",
    "rimraf": "~3.0.2",
    "lint-staged": "~13.1.0",
    "prettier": "~2.8.1",
    "husky": "~8.0.1",
    "typescript": "~4.9.4",
    "@types/jest": "~29.2.4",
    "@types/node": "~16.11.7",
    "@types/react": "~18.0.26",
    "react": "~18.2.0",
    "rollup": "~3.21.7",
    "rollup-plugin-typescript2": "~0.34.1",
    "tslib": "~2.5.0",
    "rollup-plugin-string": "~3.0.0"
  },
  "sideEffects": [],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
